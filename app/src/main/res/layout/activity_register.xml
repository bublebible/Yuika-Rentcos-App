<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f6f6"
    android:fillViewport="true"
    tools:context=".ui.auth.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#CCF8F6F6">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                app:tint="#181111"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuika_rentcos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#181111"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_circle_primary_light"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_checkroom"
                    app:tint="#ee2b2b"
                    android:contentDescription="@string/desc_icon_cloth"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_join_fun"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#181111"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_join_fun"
                android:textSize="16sp"
                android:textColor="#4E342E"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:clipToPadding="false">

            <TextView
                style="@style/LabelText"
                android:text="@string/label_fullname"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/RoundedInputLayout"
                app:startIconDrawable="@drawable/ic_badge">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_fullname"
                    style="@style/RoundedEditText"
                    android:hint="@string/hint_fullname"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/LabelText"
                android:text="@string/label_username"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/RoundedInputLayout"
                app:startIconDrawable="@drawable/ic_alternate_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    style="@style/RoundedEditText"
                    android:hint="@string/hint_username"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/LabelText"
                android:text="@string/label_email"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/RoundedInputLayout"
                app:startIconDrawable="@drawable/ic_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    style="@style/RoundedEditText"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/LabelText"
                android:text="@string/label_password"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/RoundedInputLayout"
                app:startIconDrawable="@drawable/ic_lock"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    style="@style/RoundedEditText"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="8dp">
                <View android:layout_weight="1" android:layout_height="match_parent" android:background="#4CAF50" android:layout_width="0dp" android:layout_marginEnd="4dp"/>
                <View android:layout_weight="1" android:layout_height="match_parent" android:background="#4CAF50" android:layout_width="0dp" android:layout_marginEnd="4dp"/>
                <View android:layout_weight="1" android:layout_height="match_parent" android:background="#E0E0E0" android:layout_width="0dp" android:layout_marginEnd="4dp"/>
                <View android:layout_weight="1" android:layout_height="match_parent" android:background="#E0E0E0" android:layout_width="0dp"/>
            </LinearLayout>

            <TextView
                style="@style/LabelText"
                android:text="@string/label_confirm_password"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/RoundedInputLayout"
                app:startIconDrawable="@drawable/ic_lock_reset"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirm_password"
                    style="@style/RoundedEditText"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_daftar"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:backgroundTint="#ee2b2b"
                app:cornerRadius="28dp"
                android:stateListAnimator="@null"
                android:elevation="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">

                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp" android:background="#e6dbdb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_or_register"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#5D4040"
                    android:layout_marginHorizontal="16dp"/>

                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp" android:background="#e6dbdb"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_white_border"
                    android:layout_marginEnd="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_google_g"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#181111"
                        android:layout_gravity="center"
                        tools:ignore="TextContrastCheck"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_white_border">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_laptop_mac"
                        app:tint="#181111"
                        android:layout_gravity="center"
                        android:contentDescription="@string/desc_icon_laptop"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_already_have_account"
                    android:textColor="#181111"/>

                <TextView
                    android:id="@+id/tv_login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_login"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>